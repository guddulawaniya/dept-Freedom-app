<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#B6B1B1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:background="@drawable/right_arrow_payment"
                    android:padding="2dp"
                    app:srcCompat="@drawable/right_arrow" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/inputround"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Dept Details"
                    android:textColor="#989292"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageVie"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:background="@drawable/right_arrow_payment"
                    android:padding="2dp"
                    app:srcCompat="@drawable/right_arrow" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/inputround"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Payment method"
                    android:textColor="#989292"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Principal Paid Date" />

                <TextView
                    android:id="@+id/textVie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/inputround"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="8dp"
                    android:paddingTop="6dp"
                    android:paddingRight="4dp"
                    android:src="@drawable/useravtar"
                    android:text="Â£"

                    android:textColor="@android:color/holo_red_light"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/textVienew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/inputround"
                    android:drawableRight="@drawable/down_arrow_small_size"
                    android:elevation="5dp"
                    android:drawableTint="@color/textcolor"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="New"
                    android:textColor="#989292"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textViedate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/inputround"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:paddingEnd="5dp"
                    android:text="DD MM YY"
                    android:textColor="#989292"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textVieinput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/inputround"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/down_arrow_small_size"
                android:drawablePadding="3dp"
                android:drawableTint="@color/textcolor"
                android:text="Other Option"
                android:textColor="#433C3C" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="USE OF COUPON" />

                <TextView
                    android:id="@+id/textVieCOUP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/inputround"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="XXXXXXXXXXX"
                    android:textColor="#989292"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>